{
	"name": "buffetbotjs",
	"version": "1.0.0",
	"private": true,
	"description": "Bot I created for my private Discord",
	"author": {
		"email": "packageJson@danielTurcich.com",
		"name": "Daniel Turcich",
		"url": "https://danielTurcich.com"
	},
	"engines": {
		"node": "^20.0.0",
		"pnpm": "^8.1.0"
	},
	"type": "module",
	"scripts": {
		"serve": "pnpm compile && pnpm execute",
		"compile": "parcel build",
		"execute": "node --experimental-json-modules ./dist/index.js",
		"checks": "pnpm lint-check && pnpm format-check && pnpm type-check",
		"lint-fix": "eslint --fix \"**/*.{ts,vue}\"",
		"lint-check": "eslint \"**/*.{ts,vue}\"",
		"format-fix": "prettier --check --write \"**/**\" ",
		"format-check": "prettier --check \"**/**\"",
		"type-check": "tsc --noEmit",
		"prepare": "husky install"
	},
	"dependencies": {
		"@discordjs/opus": "^0.9.0",
		"@discordjs/voice": "^0.16.0",
		"discord.js": "^14.9.0",
		"file-system": "^2.2.2",
		"fluent-ffmpeg": "^2.1.2",
		"libsodium-wrappers": "^0.7.11",
		"lodash.isequal": "^4.5.0",
		"ytdl-core": "^4.11.4"
	},
	"devDependencies": {
		"@types/fluent-ffmpeg": "^2.1.21",
		"@types/lodash.isequal": "^4.5.6",
		"@types/node": "^18.15.12",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"parcel": "^2.8.3",
		"prettier": "^2.8.7",
		"typescript": "^5.0.4",
		"undici": "^5.21.2"
	},
	"source": "./src/main.ts",
	"module": "./dist/index.js",
	"targets": {
		"module": {
			"context": "node",
			"isLibrary": false,
			"sourceMap": false
		}
	}
}
